DELIMITER //
CREATE TRIGGER log10 BEFORE INSERT ON expdata
FOR EACH ROW
BEGIN
SET NEW.log10_value=LOG10(NEW.value);
END //
DELIMITER ;


DELIMITER //
CREATE TRIGGER email BEFORE INSERT ON contact_info
FOR EACH ROW
BEGIN
IF LOCATE("@",NEW.email)=0 THEN
SIGNAL SQLSTATE '45000'
SET MESSAGE_TEXT = 'The email is not valid';
END IF;
END //
DELIMITER ;



DELIMITER //
CREATE TRIGGER trim BEFORE INSERT ON contact_info
FOR EACH ROW
BEGIN
SET NEW.url= TRIM('http://' FROM NEW.url);
END //
DELIMITER ;
